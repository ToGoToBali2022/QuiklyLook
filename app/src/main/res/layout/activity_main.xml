<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/main_frame"
        ></FrameLayout>

 <RadioGroup
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/main_rg_group"
     android:orientation="horizontal"
     >

     <RadioButton
         android:checked="true"
         android:id="@+id/main_bt_home"
         android:gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:button="@null"
         android:text="@string/radio_bt_home"
         android:textColor="@drawable/textcolor"
         android:drawableTop="@drawable/draw_home_select"
         />
     <RadioButton
         android:id="@+id/main_bt_find"
         android:gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:button="@null"
         android:text="@string/radio_bt_find"
         android:textColor="@drawable/textcolor"
         android:drawableTop="@drawable/draw_find_select"
         />
     <RadioButton
         android:id="@+id/main_bt_feed"
         android:gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:button="@null"
         android:text="@string/radio_bt_feed"
         android:textColor="@drawable/textcolor"
         android:drawableTop="@drawable/draw_feed_select"
         />


     <RadioButton
         android:id="@+id/main_bt_my"
         android:gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:button="@null"
         android:text="@string/radio_bt_my"
         android:textColor="@drawable/textcolor"
         android:drawableTop="@drawable/draw_my_select"
         />

 </RadioGroup>
</LinearLayout>
